MDFloatLayout:

    md_bg_color: 0,0,0,1

    MDLabel:
        font_size: 40
        text: "Select game mode"
        halign: "center"
        pos_hint: {"center_y": .7}

    MDGridLayout:
        size_hint: .5, .3
        pos_hint: {'center_x': .5, 'center_y': .3}
        cols: 2
        rows: 1

        Button:
            id: btn1
            text: "PvP"
            font_size: "45sp"
            on_press: app.root.current="style"

        Button:
            id: btn2
            text: "PvE"
            font_size: "45sp"
            on_release: app.press_PvE()